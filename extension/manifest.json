{
    "manifest_version": 2,
    "name": "Uppercase - WhatsApp with Capital letters",
    "short_name": "Uppercase",
    "version": "1.0.0",
    "description": "Let your friends think you're on your phone but write them through the WhatsApp web client.",
    "page_action": {
        "default_icon": {
            "19": "img/icon-16.png",
            "38": "img/icon-48.png"
        },
        "default_title": "Uppercase"
    },
    "content_scripts": [
        {
            "matches": [
                "https://web.whatsapp.com/"
            ],
            "js": [
                "js/jquery-3.2.1.min.js",
                "js/uppercase.js"
            ]
        }
    ],
    "icons": {
        "128": "img/icon-128.png"
    },
    "author": "Nahuel Barrios"
}
